<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="false"><layer-list>
            <item android:height="50dp" android:width="100dp"><shape android:shape="rectangle">
                    <solid android:color="#aaa" />

                    <padding android:left="5dp" android:top="5dp" />

                    <corners android:radius="30dp"></corners>
                </shape></item>
            <item android:height="50dp" android:width="100dp"><shape android:shape="rectangle">

                    <!--
                        <corners android:radius="3dp"/>
			            <padding android:left="" android:right="" android:top="" android:bottom=""/>
                    -->
                    <gradient android:angle="-90" android:centerColor="#aaffaa" android:endColor="#22ff22" android:startColor="#22ff22" android:type="linear" />

                    <corners android:radius="30dp"></corners>
                </shape></item>
        </layer-list>
    </item>
    <item android:state_pressed="true"><layer-list>
            <item android:height="50dp" android:width="100dp"><shape android:shape="rectangle">
                    <solid android:color="#aaa" />

                    <padding android:left="5dp" android:top="5dp" />

                    <corners android:radius="30dp"></corners>
                </shape></item>
            <item android:height="50dp" android:width="100dp"><shape android:shape="rectangle">

                    <!--
                        <corners android:radius="3dp"/>
			            <padding android:left="" android:right="" android:top="" android:bottom=""/>
                    -->
                    <gradient android:angle="-90" android:centerColor="#33ff33" android:endColor="#00ff00" android:startColor="#33ff33" android:type="linear" />

                    <corners android:radius="30dp"></corners>
                </shape></item>
        </layer-list>
    </item>
</selector>
